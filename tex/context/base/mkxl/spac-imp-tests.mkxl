%D Eventually we will have a set of useable (realistic) presets and definitions
%D here. So, all be low can change dependin gon what users feed back to us.

% \writestatus{loading}{ConTeXt Spacing Macros / Test Passes}

\unprotect

\startsetups align:pass:decent
    \pretolerance 50
    \tolerance    150
    \parpasses    2
        identifier           \parpassidentifier{decent}
        threshold            0.05pt
        tolerance            200
      next
        threshold            0.05pt
        tolerance            500
        adjustspacing          3
        adjustspacingstep      1
        adjustspacingshrink   20
        adjustspacingstretch  40
    \relax
%     \linebreakpasses\plusone
\stopsetups

\startsetups align:pass:quality
    \pretolerance 50
    \tolerance    150
    \parpasses    4
        identifier           \parpassidentifier{quality}
        threshold            0.025pt
        tolerance            175
      next
        threshold            0.025pt
        tolerance            200
      next
        threshold            0.025pt
        tolerance            250
      next
        threshold            0.025pt
        tolerance            250
        adjustspacing          3
        adjustspacingstep      1
        adjustspacingshrink   20
        adjustspacingstretch  40
    \relax
%     \linebreakpasses\plusone
\stopsetups

% the test set:

% \startsetups align:pass:test1
%     \pretolerance 100
%     \tolerance    200
%     \parpasses      2
%         classes              \indecentparpassclasses
%         tolerance            400
%       next
%         classes              \indecentparpassclasses
