      \box\globalscratchbox
      \inheritedcolumnsetframedbox\currentcolumnset\scratchbox
      \ifzeropt#2\else\kern#2\fi
   \egroup
   \relax
   \box\b_page_mvl_column
   \ifzeropt#2\else\kern#2\fi
   \endgroup}

