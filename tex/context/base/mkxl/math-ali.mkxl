     \ifcase\c_strc_math_number_variant\or
       \s_strc_formulas_margin_left\zeroskip
     \fi
     \setbox\b_strc_formulas_number\hbox to \d_strc_formulas_display_width\bgroup
       \kern\s_strc_formulas_margin_left
