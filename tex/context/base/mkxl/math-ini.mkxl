   \orelse\ifdim\dp\scratchbox>\strutdp
     \math_inline_openup_start_yes
   \else
     \math_inline_openup_start_nop
   \fi
   \startimath
   #1%
   \stopimath
   \math_inline_openup_stop
   \endgroup}

