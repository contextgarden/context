%D The triggers:

\newtoks\everyenableelements
\newtoks\everydisableelements

\appendtoks
    \strc_tags_enable_elements
    \strc_tags_enable_properties
    \ifcstok{\taggingparameter\c!method}\v!auto
      \strc_tags_enable
    \else
      \strc_tags_disable
